{% extends 'base.html.twig' %}

{% block body %}
    <h3>Просмотр выборок</h3>
    <div class="text-right">
        <a class="btn btn-primary mb-2" href="{{ path('homepage') }}" role="button">Назад</a>
    </div>
    <div class="list">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Название</th>
                <th scope="col">Дата создания</th>
                <th scope="col">Действия</th>
            </tr>
            </thead>
            <tbody>
                {% for s in items %}
                    <tr>
                        <th scope="row">{{ s.id }}</th>
                        <td>{{ s.uids | join(', ') }}</td>
                        <td>
                            <a href="{{ path('edit_melogram', {id: s.id}) }}" title="Посмотреть"><img alt="Посмотреть" src="{{ asset('img/edit.png') }}?ver=1" /></a>
                            <a href="{{ path('remove_melogram', {id: s.id}) }}" class="remove_melogram_link" title="Удалить"><img alt="Удалить" src="{{ asset('img/remove.png') }}?ver=1" /></a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}