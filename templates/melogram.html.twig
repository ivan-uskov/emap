{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/Melogram.js') }}"></script>
{% endblock %}

{% block body %}
    <form action="/action_page.php" method="post">
        <div class="form-group">
            <label for="exampleFormControlInput1">Название особи *</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" required maxlength="255">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Семья</label>
            <select class="form-control" id="melogramFamily" name="family_id">
                {% for id, f in hierarchy.families %}
                    <option value="{{ id }}">{{ f }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Колония</label>
            <select class="form-control" id="melogramColony" disabled>
                {% for id, c in hierarchy.colonies %}
                    <option value="{{ id }}">{{ c }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Популяция</label>
            <select class="form-control" id="melogramPopulation" disabled>
                {% for id, p in hierarchy.populations %}
                    <option value="{{ id }}">{{ p }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Вид</label>
            <select class="form-control" id="melogramSpecie" disabled>
                {% for id, s in hierarchy.species %}
                    <option value="{{ id }}">{{ s }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" required>
                <label class="custom-file-label" for="inputGroupFile01">Выбрать файл мелограммы</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
{% endblock %}