{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/Melogram.js') }}"></script>
{% endblock %}

{% block body %}
    {% if melogram is defined %}
        <h3>Редактирование мелограммы</h3>
    {% else %}
        <h3>Добавление мелограммы</h3>
    {% endif %}
    <a href="{{ path('homepage') }}">Назад</a>
    <form action="{% if melogram is defined %}{{ path('edit_melogram_ajax', {id: melogram.id}) }}{% else %}{{ path('add_melogram_ajax') }}{% endif %}" method="post" enctype="multipart/form-data" class="mt-5">
        <div class="form-group">
            <label for="exampleFormControlInput1">Название особи *</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" required maxlength="255" name="melogram_name" value="{% if melogram is defined %}{{ melogram.name }}{% endif %}">
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Семья</label>
            <select class="form-control" id="melogramFamily" name="family_id">
                {% for id, f in hierarchy.families %}
                    <option value="{{ id }}"{% if melogram is defined and (melogram.familyId == id) %}selected="selected"{% endif %}>{{ f }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Колония</label>
            <select class="form-control" id="melogramColony" disabled>
                {% for id, c in hierarchy.colonies %}
                    <option value="{{ id }}"{% if melogram is defined and (melogram.familyId == id) %}selected="selected"{% endif %}>{{ c }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Популяция</label>
            <select class="form-control" id="melogramPopulation" disabled>
                {% for id, p in hierarchy.populations %}
                    <option value="{{ id }}"{% if melogram is defined and (melogram.familyId == id) %}selected="selected"{% endif %}>{{ p }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Вид</label>
            <select class="form-control" id="melogramSpecie" disabled>
                {% for id, s in hierarchy.species %}
                    <option value="{{ id }}"{% if melogram is defined and (melogram.familyId == id) %}selected="selected"{% endif %}>{{ s }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="input-group mb-3">
            <div class="custom-file">
                <input type="file" name="melogram_file" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01" {% if melogram is not defined %}required{% endif %}>
                <label class="custom-file-label" for="inputGroupFile01">Выбрать файл мелограммы</label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
{% endblock %}