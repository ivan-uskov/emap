{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="{{ asset('js/lib/opensheetmusicdisplay.min.js') }}"></script>
    <script src="{{ asset('js/SelectionResult.js') }}"></script>
{% endblock %}

{% block body %}
    <div class="list">
        <div class="block-header">
            <h2 style="color: rgba(0,0,0,.7)">Выборка</h2>
        </div>
        <div class="text-right" style="margin:4px;">
            <a class="btn btn-primary mb-2" href="{{ path('sample') }}" role="button">Отменить</a>
            <a class="btn btn-primary mb-2" href="" role="button">Склеить</a>
        </div>
        <div class="block-top" style="margin:2px;border:solid 1px darkgrey;height:100px;overflow:auto;">
            {% for m in selection_result %}
                <a class="btn btn-outline-secondary" href="" role="button" style="margin:4px 1px;">
                    {{ m.uid }}
                </a>
                <input type="hidden" id="file{{ m.uid }}" class="source_file" value="{{ m.file }}" />
            {% endfor %}
        </div>
        <div class="block-bottom" id="graphContainer" style="margin:2px;border:solid 1px darkgrey;height:auto;overflow:auto;"></div>
    </div>
{% endblock %}